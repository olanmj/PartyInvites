@model IEnumerable<PartyInvites.Models.GuestResponse>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "RsvpForm")
    </p>
    <p>
        @using (Html.BeginForm("List", "Home", FormMethod.Get))
        {
            @Html.DropDownList("Coming", new[] {
                                   new SelectListItem() {Text = "Attending", Value = bool.TrueString},
                                   new SelectListItem() {Text = "Not attending", Value = bool.FalseString}
                               }, "All")

            <input type="submit" value="Filter" />
        }
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WillAttend)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem =>item.WillAttend)
                </td>
            </tr>
        }

    </table>
</body>
</html>
